<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Courses</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f2f2f2;
            color: #333;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            padding: 20px;
            margin-bottom: 30px;
            text-align: center;
        }

        h1 {
            color: #333;
        }

        .card {
            margin-bottom: 20px;
        }

        .card-title {
            font-size: 1.25rem;
        }

        .card-text {
            font-size: 1rem;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
        body {
            background-color: #f2f2f2;
            color: #333;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            background-color: #d2daff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
            text-align: center; 
            width: 80%; 
            margin-left: auto; 
            margin-right: auto;
        }

        h1 {
            color: #333;
        }

        .result-container {
            background-color: #f9f9f9;
            padding: 15px;
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        }
        button[type="submit"] {
        background-color: #333;
        border: none;
        color: #fff;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        margin-top: 15px; 
    }

    button[type="submit"]:hover {
        background-color: #555;
    }

        input[type="number"],
        select {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: none;
            border-bottom: 2px solid #aaa;
            background-color: transparent;
            transition: border-bottom-color 0.3s ease;
        }
        
    </style>
</head>

<body>
    <section class="header">
        <div class="header-main bg-light-pink"> 
            <div class="container">
                <div class="col-md-auto">
                    <nav class="navbar navbar-expand-lg navbar-light w-100" id="header-navbar">
                        <a class="navbar-brand font-weight-bold" href="/index">couRses</a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item">
                                    <a class="nav-link text-uppercase" href="/weather/<%= userId %>">Books</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-uppercase" href="/myCourses">My Courses</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-uppercase" href="#" id="navbarDropdown" role="button"
                                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Language
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" href="#">English</a>
                                        <a class="dropdown-item" href="#">Русский</a>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-uppercase" href="/profile/">Profile</a>
                                </li>

                                <%  console.log(isAdmin)
                                if (isAdmin) { %>
                                    <li class="nav-item">
                                        <a class="nav-link text-uppercase" href="/admin/users">Admin page</a>
                                    </li>
                                <% } %>
                            </ul>
                        </div>
                    </nav>
                    
                </div>
            </div>
        </div>
    </section>

    <section>
        <h1 class="text-center">My Courses</h1>
        <div class="container">
            <div class="row">
                <% courses.forEach(course => { %>
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <div id="carousel<%= course._id %>" class="carousel slide" data-ride="carousel">
                                <ol class="carousel-indicators">
                                    <% for (let i = 0; i < course.images.length; i++) { %>
                                        <li data-target="#carousel<%= course._id %>" data-slide-to="<%= i %>" <% if (i === 0) { %>class="active"<% } %>></li>
                                    <% } %>
                                </ol>
                                <div class="carousel-inner">
                                    <% course.images.forEach((image, index) => { %>
                                        <div class="carousel-item <% if (index === 0) { %>active<% } %>">
                                            <img src="<%= image %>" class="d-block w-100" alt="Course Image">
                                        </div>
                                    <% }); %>
                                </div>
                                <a class="carousel-control-prev" href="#carousel<%= course._id %>" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carousel<%= course._id %>" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title"><%= course.names[0].name %></h5>
                                <p class="card-text"><%= course.descriptions[0].description %></p>
                                <p class="card-text">Price: $<%= course.price %></p>
                                <a href="/courses/<%= course._id %>" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
        </div>
    </section>

    <footer class="footer">
        <div class="container">
            <p>Zhansaya Musabekova | SE-2206</p>
        </div>
    </footer>

    <!-- Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
